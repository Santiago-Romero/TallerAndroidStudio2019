<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="715dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/vista_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="385dp"
            android:layout_height="71dp"
            android:contentDescription="@string/title"
            app:srcCompat="@mipmap/android" />

        <Button
            android:id="@+id/semilleros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Semilleros"
            android:onClick="goSemilleros"/>

        <Button
            android:id="@+id/trabajos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Trabajos"
            android:onClick="goTrabajos"/>

        <Button
            android:id="@+id/actividades"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Actividades"
            android:onClick="goActividades"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>